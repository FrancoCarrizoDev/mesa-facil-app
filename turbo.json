{
  "globalEnv": [
    "AUTH0_JWKS_URI",
    "AUTH0_AUDIENCE",
    "AUTH0_ISSUER",
    "NEXT_PUBLIC_BASE_URL"
  ],
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**"]
    },
    "lint": {},
    "type-check": {},
    "dev": {
      "cache": false,
      "persistent": true
    },
    "clean": {
      "cache": false
    }
  }
}

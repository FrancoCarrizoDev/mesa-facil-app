{
  "globalEnv": [
    "NEXT_PUBLIC_BASE_URL",
    "NEXT_PUBLIC_SECRET",
    "GOOGLE_CLIENT_ID",
    "GOOGLE_SECRET"
  ],
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**"]
    },
    "lint": {},
    "type-check": {},
    "dev": {
      "cache": false,
      "persistent": true
    },
    "clean": {
      "cache": false
    }
  }
}
